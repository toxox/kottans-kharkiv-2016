<h2>Create Secure Message</h2>
<br/>
<div class="col-md-6">
  <form action="/messages" method="post" role="form">
    <div class="form-group">
      <label for="message_body">Body:</label>
      <br>
      <textarea id="message_body" name="message[body]" class="form-control col-lg-3" rows="10" required></textarea>
    </div>
    <div class="form-group">
      <label for="message_password">Password:</label>
      <br>
      <input id="message_password" name="password" class="form-control" required type="password"/>
    </div>
    <div class="form-group">
      <label for="destroy_value">Delete after</label>
      <br>
      <input id="destroy_value" type="number" name="destroy_value" required class="form-control" min="1"/>
    </div>

    <div class="form-group">
      <label class="radio-inline">
        <input type="radio" name="destroy_type" value="hours" checked /> hours
      </label>
      <label class="radio-inline">
        <input type="radio" name="destroy_type" value="views" /> views
      </label>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>
